<%-include('partials/header.ejs')%>

<h1>Index page.</h1>

<%blogs.forEach(function(blog){%>
    <div>
        <h2><%=blog.title%></h2>
        <img src="<%=blog.image%>"/>
        <span><%=blog.created.toDateString()%></span>
        <p><%=blog.body.split(" ").slice(0,15).join(" ")%> ...</p>
        <a href="/blogs/<%=blog._id%>">Read More</a>
    </div>    
<% }) ;%>

<%-include('partials/footer.ejs')%>